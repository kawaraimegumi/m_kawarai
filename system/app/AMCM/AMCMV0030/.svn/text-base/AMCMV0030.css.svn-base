/*
 * クイックメニュー: hover 制御
 */
#ca_quickArea li .delQm {
	display: none;
}
#ca_quickArea li:hover .delQm {
	display: block;
}

/*
 * メニュー: hover 制御
 */
#ca_menuArea li.endLevel .addQm {
	display: none;
}
#ca_menuArea li.endLevel:hover .addQm {
	display: block;
}
